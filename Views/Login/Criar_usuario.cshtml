@model UsuarioModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}

<div class="account-pages my-5 pt-sm-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card overflow-hidden">
                    <div class="bg-primary bg-soft">
                        <div class="row">
                            <div class="col-7">
                                <div class="text-primary p-4">
                                    <h5 class="text-primary">Fazer Cadastro</h5>
                                    <p>Faça seu cadastro agora!</p>
                                </div>
                            </div>
                            <div class="col-5 align-self-end">
                                <img src="~/assets/images/profile-img.png" alt="" class="img-fluid">
                            </div>
                        </div>
                    </div>
                    <div class="card-body pt-0">
                        <div>
                            <a href=@Url.Action("Index", "Login")>
                                <div class="avatar-md profile-user-wid mb-4">
                                    <span class="avatar-title rounded-circle bg-light">
                                        <img src="~/assets/images/Dt.png" alt="" class="rounded-circle" height="70">
                                    </span>
                                </div>
                            </a>
                        </div>
                        <div class="p-2">
                            <form asp-controller="Profile" asp-action="Criar_usuario" method="post" class="needs-validation")>
                                <div class="mb-3">
                                    <label for="useremail" class="form-label">Email</label>
                                    <input type="email" class="form-control" asp-for="Email" placeholder="" required>
                                    <div class="invalid-feedback">
                                        Email é obrigatório
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="username" class="form-label">Usuário</label>
                                    <input type="text" class="form-control" asp-for="Nome" placeholder="" required>
                                    <div class="invalid-feedback">
                                        Usuário é obrigatório
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="userpassword" class="form-label">Senha</label>
                                    <input type="password" class="form-control" aria-label="Password" aria-describedby="password-addon" asp-for="Senha" required>

                                    <div class="invalid-feedback">
                                        Senha é obrigatório
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-10">
                                        <div class="mb-3">
                                            <label for="formrow-inputCity" class="form-label">Rua</label>
                                            <input type="text" class="form-control" asp-for="Rua" required>
                                            <div class="invalid-feedback">
                                                Rua é obrigatório
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2">
                                        <div class="mb-1">
                                            <label for="formrow-inputCity" class="form-label">Nº</label>
                                            <input type="text" class="form-control" asp-for="Numero"  required>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="mb-1">
                                        <label for="formrow-inputCity" class="form-label">Telefone</label>
                                        <input type="text" class="form-control" asp-for="Celular" required>
                                        <div class="invalid-feedback">
                                            Telefone é obrigatório
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="formrow-inputCity" class="form-label">Bairro</label>
                                    <input type="text" class="form-control" asp-for="Bairro" required>
                                    <div class="invalid-feedback">
                                        Bairro é obrigatório
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="formrow-inputCity" class="form-label">Cidade</label>
                                    <input type="text" class="form-control" asp-for="Cidade" required>
                                    <div class="invalid-feedback">
                                        Cidade é obrigatório
                                    </div>
                                </div>
                                <div class="mt-4 d-grid">
                                    <button class="btn btn-primary waves-effect waves-light" type="submit">Registrar</button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
                <div class="mt-5 text-center">

                    <div>
                        <p>Já possui uma conta ? <a href=@Url.Action("Index", "Login") class="fw-medium text-primary"> Entrar</a> </p>
                        <p>
                            ©
                            <script>document.write(new Date().getFullYear())</script> Buschini. Criado por <i class="mdi mdi-heart text-danger"></i>Diogo Buschini Nieto
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
@section scripts{
    <!-- validation init -->
    <script src="~/assets/js/pages/validation.init.js"></script>
    <!-- App js -->
    <script src="~/assets/js/app.js"></script>
}